@model CoralBlog.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container w-50">
    <h2>Login</h2>
    <br>
    <form asp-action="Index" method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Email, null, "O campo de email é obrigatório.")</span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Senha</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Password, null, "O campo de senha é obrigatório.")</span>
        </div>
        <br>
        <div class="d-flex justify-content-around">
            <a href="@Url.Action("Create", "Login")" class="btn btn-link p-0 text-black">
                <p><i class="fas fa-user-plus"></i> Registrar</p>
            </a>
            <button type="submit" class="btn btn-link p-0 text-black">
                <p><i class="fas fa-sign-in-alt"></i> Entrar</p>
            </button>
        </div>
    </form>

    <div class="text-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</div>